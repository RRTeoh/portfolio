---
const { project } = Astro.props;
---

<a href={`/projects/${project.slug}`} class="project-card group">
  <div class="video-container">
    {project.videoUrl ? (
      <img 
        src={`https://img.youtube.com/vi/${project.videoUrl.split('/').pop()}/mqdefault.jpg`} 
        alt={project.title}
        class="youtube-thumb"
      />
    ) : project.images && project.images.length > 0 ? (
      <img 
        src={project.images[0]} 
        alt={project.title}
        class="youtube-thumb"
      />
    ) : (
      <div class="placeholder-img">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-image"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
      </div>
    )}

    <div class="overlay"></div>
  </div>
  <div class="content">
    <h3>{project.title}</h3>
    <p><strong>Tools:</strong> {project.toolsUsed}</p>
  </div>
</a>

<style>
  .project-card {
    display: block;
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    text-decoration: none;
    color: white;
    background: #1a1a1a;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid #333;
    height: 100%;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: #a855f7; /* Purple accent */
  }

  .video-container {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #000;
  }

  .youtube-thumb {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project-card:hover .youtube-thumb {
    transform: scale(1.05);
  }

  .placeholder-img {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #333;
    background: #111;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .overlay {
    opacity: 0.3;
  }

  .content {
    padding: 1.5rem;
    position: relative;
    z-index: 10;
  }

  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    font-weight: 700;
    background: linear-gradient(90deg, #fff, #ccc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  p {
    margin: 10;
    font-size: 0.9rem;
    color: #a1a1aa;
    line-height: 1.5;
  }
</style>
