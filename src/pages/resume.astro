        </div>
      </section>

      <!-- Skills & Language -->
      <section class="section grid-2">
        <div>
          <h2>Skills</h2>
          <div class="skills-group">
            <h3>Hard Skills</h3>
            <ul class="skills-list">
              {hardSkills.map(skill => <li>{skill}</li>)}
            </ul>
          </div>
          <div class="skills-group">
            <h3>Soft Skills</h3>
            <ul class="skills-list">
              {softSkills.map(skill => <li>{skill}</li>)}
            </ul>
          </div>
        </div>
        <div>
          <h2>Language</h2>
          <ul class="skills-list">
            {languages.map(lang => <li>{lang}</li>)}
          </ul>
        </div>
      </section>

      <!-- Extra-Curricular -->
      <section class="section">
        <h2>Extra-Curricular</h2>
        <div class="item">
          <div class="item-header">
            <h3>DMT Student Showcase 2025 - Secretary Leader</h3>
            <span class="date">Apr 2025 - Oct 2025</span>
          </div>
          <ul>
            <li>Led the secretary team in managing all documentation, including proposals, reports, application letters, and meeting minutes.</li>
            <li>Responsible for record management such as attendance tracking, progress documentation, and internal announcements.</li>
