---
import Layout from '../layouts/Layout.astro';

const hardSkills = [
  "Unity",
  "Unreal Engine",
  "Maya",
  "Adobe After Effect",
  "Adobe Animate",
  "Adobe Premium Pro",
  "C and C++ Programming"
];

const softSkills = [
  "Communication skills",
  "Problem Solving skills",
  "Teamwork",
  "Innovative",
  "Creative",
  "Time Management"
];

const languages = ["English", "Chinese", "Malay"];
---

<Layout>
  <main>
    <div class="resume-container">
      <!-- Header Section -->
      <section class="header">
        <h1>Teoh Rui Rong</h1>
        <div class="contact-info">
          <p>üìç Bayan Lepas, Penang</p>
          <p>üìû +60 12 332 1907</p>
